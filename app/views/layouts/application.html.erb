<!DOCTYPE html>
<html>
<head>
  <title>Kudyn</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="navbar navbar-inverse navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <% if user_signed_in? %>
        <a class="brand">Kudyn</a>
        <div class="nav-collapse collapse">
          <ul class="nav">
            <li class="active"><a href="#">Inicio</a></li>
          </ul>
          <ul class="nav">
            <li class="active"><a href="#">Asistencia</a></li>
          </ul>
          <ul class="nav">
            <li class="active"><a href="#">Calificaciones</a></li>
          </ul>
          <ul class="nav">
            <li class="active"><%= link_to "Cerrar sesiÃ³n", destroy_user_session_path, :method => :delete %></li>
          </ul>
        </div><!--/.nav-collapse -->
        <% end %>
      </div>
    </div>
  </div>

  <div>
    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, :id => "flash_#{name}" %>
    <% end %>
  </div>
  <div class="container">
    <%= yield %>
  </div>
</body>
</html>
